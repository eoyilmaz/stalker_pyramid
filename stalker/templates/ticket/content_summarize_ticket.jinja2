<div style="background-color: #9d9d9d" class="page_title"></div>
<div id='ticket_details_content_pane'>
    {# Basic Info #}
    <div id='ticket_info' class='summary_ticket_info'>
        <h4 style='margin: 0;'>{{ ticket.name }}</h4>
        <table>

            <tr>
                <td style='text-align: right'><strong>Description</strong></td>
                <td>&nbsp;</td>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <td style='text-align: right'><b>Project</b></td>
                <td>&nbsp;</td>
                <td>
                    {% if has_permission('Read_Project') %}
                        <a href="javascript:redirectLink('central_content',
                        'view/project/{{ ticket.project.id }}');">
                            {{ ticket.project.name }}
                        </a>
                    {% else %}
                        {{ ticket.project.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td style='text-align: right'><strong>Status</strong></td>
                <td>&nbsp;</td>
                <td>{{ ticket.status.name }}</td>
            </tr>
            <tr>
                <td style='text-align: right'><strong>Created By</strong></td>
                <td>&nbsp;</td>
                <td>
                    {% if has_permission('Read_User') %}
                        <a href="javascript:redirectLink('central_content',
                        'view/user/{{ ticket.created_by.id }}');">
                            {{ ticket.created_by.name }}
                        </a>
                    {% else %}
                        {{ ticket.created_by.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td style='text-align: right'></td>
                <td>&nbsp;</td>
                <td>
                    {% if has_permission('Update_Ticket') %}
                        <button id='update_ticket_button'>Update</button>
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript">
    require([
        'dojox/charting/Chart',
        'dojox/charting/themes/Tufte',
        'dojox/charting/plot2d/Pie',
        'dojox/charting/action2d/MoveSlice',
        'dijit/form/Button',
        'stalker/thumbnailMenu',
        'stalker/dialogs',
        'stalker/dialogCaller',
        'dojo/domReady!'
    ], function (Chart, theme, PiePlot, MoveSlice, Button, thumbnailMenu, dialogs,
                 dialogCaller) {


        // UPDATE TICKET BUTTON
        var ticket_summary_updater = function () {
            // refresh the content pane
            // get the content pane by id, alternatively we can use the parent of the button
            var content_pane = update_ticket_button.getParent();
            // refresh the pane
            content_pane.refresh();
        };

        {% if has_permission('Update_Ticket') %}
            var update_ticket_button = dialogCaller({
                label: 'Update',
                dialog_id: 'ticket_dialog',
                content_creator: dialogs.update_ticket_dialog,
                attach_to: 'update_ticket_button',
                related_field_updater: ticket_summary_updater,
                data_id: '{{ ticket.id }}'
            });
            update_ticket_button.startup();

            thumbnailMenu({
                targetNodeIds: ['ticket_avatar'],
                selector: '.thumbnail_menu',
                entity_id: {{ user.id }},
                related_field_updater: function () {
                    var content_pane = update_ticket_button.getParent();
                    if (content_pane != null) {
                        content_pane.refresh();
                    }
                }
            });
        {% endif %}




    });

</script>


