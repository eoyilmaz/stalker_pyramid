<script type='text/javascript'>
  require(['dijit/registry',
    'dojo/data/ObjectStore', 'dojox/grid/DataGrid', 'dojo/store/Memory',
    'dijit/form/FilteringSelect', 'dojo/store/JsonRest',
    'stalker/fieldUpdater', 'stalker/dialogCaller', 'stalker/gotoLink','dojo/on', 'dojo/query',
    'dojo/ready'],
          function(registry, ObjectStore, DataGrid, Memory, FilteringSelect,
                   JsonRest, fieldUpdater, dialogCaller, gotoLink, on, query, ready){

            ready(function(){

              var bookings_DataGrid = new DataGrid({
                id: 'bookings_data_grid',
                width: '100%',
                autoHeight: true,
                singleClickEdit: true,
                escapeHTMLInData: false,
                rowSelector: '20px'
              }, 'bookings_data_grid');

              {#              var append_booking_button = dialogCaller({#}
              {#                label: 'Append User',#}
              {#                dialog_id: 'append_booking_dialog',#}
              {#                content_creator: append_booking_dialog_creator,#}
              {#                attach_to: 'view_bookings_append_booking_button',#}
              {#                related_field_updater: bookings_DataGrid_updater,#}
              {#                data_id: '{{ entity.id }}'#}
              {#              });#}

              bookings_DataGrid.startup();
              {#              append_booking_button.startup();#}



              function bookings_DataGrid_updater(){

                var booking_memory = new JsonRest({
                  target: '/get/bookings_byEntity/{{ entity.id }}'
                });

                booking_memory.query().then(function(data){

                  var my_store =  new ObjectStore({ objectStore:new Memory({ data: data }) });

                  var structure = [
                    {name: 'Thumbnail',                      width: '100px'},
                    {name: 'Name',         field: 'name',    width: '100px'}
                  ];

                  bookings_DataGrid.set('store', my_store );
                  bookings_DataGrid.set('structure', structure );

                  gotoLink();

                });

              }



              bookings_DataGrid_updater();
            });
          });
</script>

