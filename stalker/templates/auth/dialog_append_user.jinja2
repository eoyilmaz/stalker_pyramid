<div class='dijitDialogPaneContentArea' style='height: 380px;width: 380px'>
  <form id='append_user_form'>
    <table style='width: 100%'>
      <tr>
        <td class='input_column'>
          <select id='all_users_list'>
          </select>
        </td>
        <td class='input_column'>
          <select id='project_users_list' >
          </select>
        </td>
      </tr>
    </table>
  </form>

</div>

