<div style="margin: 0" id='asset_border_container'>
    <div id='asset_nav_bar_content_pane'>
        {# Summary View #}
    </div>
    <div id='asset_related_data_tab_container'>
        {# Tab View #}
    </div>
</div>

<script type='text/javascript'>
    require(['dijit/registry', 'dijit/layout/BorderContainer',
        'dijit/layout/TabContainer', 'dojox/layout/ContentPane', 'dojo/domReady!'],
            function (registry, BorderContainer, TabContainer, ContentPane) {

                var asset_BorderContainer = new BorderContainer({
                    id: 'asset_border_container',
                    region: 'center',
                    orientation: 'horizontal',
                    splitter: true,
                    resizable: false,
                    style: 'width:100%; height:100%; margin:0; padding: 0;'

                }, 'asset_border_container');

                var nav_bar_content_pane = new ContentPane({
                    title: 'NavBar',
                    href: 'view/entity_nav_bar/{{ asset.id }}',
                    region: 'top',
                    style: 'padding: 0; margin:0;'
                }, 'asset_nav_bar_content_pane');



                // **********************************************************************
                // Bottom Part - Complex Data View
                var asset_related_data_tab_container = new TabContainer({

                    region: 'center',
                    style: 'width: 100%; background-color: #eeeeee;'
                }, 'asset_related_data_tab_container');

                var tasks_content_pane = new ContentPane({
                    title: 'Tasks',
                    href: 'list/tasks/{{ asset.id  }}',
                    style: 'width: 100%;'
                });

                var tickets_content_pane = new ContentPane({
                    title: 'Tickets',
                    content: 'list/tickets/{{ asset.id }}',
                    style: 'width: 100%;'
                });

                var versions_content_pane = new ContentPane({
                    title: 'Versions',
                    href: 'list/versions/{{ asset.id }}',
                    style: 'width: 100%;'
                });

                var summary_content_pane = new ContentPane({
                    title: 'Overview',
                    href: 'summarize/asset/{{ asset.id }}',
                    style: 'padding: 0; margin:0;'

                });

                asset_related_data_tab_container.addChild(summary_content_pane);
                asset_related_data_tab_container.addChild(tasks_content_pane);
                asset_related_data_tab_container.addChild(tickets_content_pane);
                asset_related_data_tab_container.addChild(versions_content_pane);


                asset_related_data_tab_container.startup();

                asset_BorderContainer.addChild(nav_bar_content_pane);
                asset_BorderContainer.addChild(asset_related_data_tab_container);
                asset_BorderContainer.startup();




            });
</script>
