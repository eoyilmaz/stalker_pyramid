<div class="breadcrumbs breadcrumbs-fixed"
     id="breadcrumbs">
    <script type="text/javascript">
        try {
            ace.settings.check('breadcrumbs', 'fixed')
        } catch (e) {
        }
    </script>

    <ul id="breadcrumb_task" class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="{{ request.route_url('view_user', id=logged_in_user.id) }}">Home</a>

                            <span class="divider">
                              <i class="icon-angle-right arrow-icon"></i>
                            </span>
        </li>
        <li>
            <a href="{{ request.route_url('view_project', id=entity.project.id) }}">{{ entity.project.name }}</a>

                            <span class="divider">
                              <i class="icon-angle-right arrow-icon"></i>
                            </span>
        </li>

        {% for parent in entity.parents %}
            <li>
                <a href="{{ request.route_url('view_task', id=parent.id)}}">{{parent.name}}</a>
                    <span class="divider">
                        <i class="icon-angle-right arrow-icon"></i>
                    </span>
            </li>
        {% endfor %}
    <li>
                <a href="{{ request.route_url('view_task', id=entity.id)}}">{{entity.name}}</a>
                    <span class="divider">
                        <i class="icon-angle-right arrow-icon"></i>
                    </span>
            </li>

        <li class="active">{{ page_title }}</li>
    </ul>
    <!--.breadcrumb-->

    <div class="nav-search" id="nav-search">
        <form class="form-search">
                            <span class="input-icon">
                            <input type="text" placeholder="Search ..."
                                   class="input-small nav-search-input"
                                   id="nav-search-input"
                                   autocomplete="on">
                            <i class="icon-search nav-search-icon"></i>
                            </span>
        </form>
    </div>
    <!--#nav-search-->
</div>

{% raw %}
<script id="tmpl_nav_link" type="text/x-dot-template">

    <li>
        <a href="{{ request.route_url('view_task', id={=it.id} }}">{=it.name}</a>
        <span class="divider">
            <i class="icon-angle-right arrow-icon"></i>
        </span>
    </li>

</script>
{% endraw %}