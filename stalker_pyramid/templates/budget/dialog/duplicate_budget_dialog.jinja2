    <form id='dup_budget_form'
          class='form-horizontal'
          role='form'
          method='post'
          action='/budgets/{{ budget.id }}/duplicate'>

        <div class='row-fluid'>
            <div class='control-group'>
                <label class='span3 control-label' for='dup_budget_name'>Duplicated Budget Name</label>
                <div class='span9'>
                        <input type='text'
                               id='dup_budget_name'
                               class='input-block-level'
                               name='dup_budget_name'
                               value='{{ budget.name }}' required>
                </div>
            </div>
            <div class='control-group'>
                <label class='span3 control-label' for='dup_budget_description'>Duplicated Budget Description</label>
                <div class='span9'>
                        <textarea id='dup_budget_description'
                                  name='dup_budget_description'
                                  class='autosize-transition span12'
                                  style='overflow: hidden; word-wrap: break-word;resize: horizontal;height: 150px;'></textarea>
                </div>
            </div>

        </div>

    </form>


</div>

