<script type="text/javascript">
    function init_dialog() {
        console.debug('starting to initialize calendar_task dialog!!!');
        let event_dialog = $('#dialog_template');

        let dialog_label = $('#dialog_template_label');
        dialog_label.find('span').remove();
        dialog_label.append('<span>{{mode}} {{ item.type }}</span>');

        {# Start Date ******************************************************* #}
        $('.date-picker').datepicker().next().on(ace.click_event, function(){
            $(this).prev().focus();
        });

        init_item_form_objects();

        {# ***************************************************************** #}
        console.log(event_dialog.attr('name'));
        if(event_dialog.attr('name')){
           $('#name').val(event_dialog.attr('name'));
        }

        if(event_dialog.attr('description')){
           $('#description').val(event_dialog.attr('description'));
        }

        $('#calendar_start_date').val((new Date({{ item.start_date }})).format("dd/mm/yyyy"));

        {# ***************************************************************** #}
        {# Submit Button #}
        let submit_button = $('#dialog_template_submit_button');
        submit_button.on('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            submit_button.button('loading');

            let start_date = get_date_picker('calendar_start_date');

            let item_form = $('#item_form');
            let params = {
                'id': '{{ item.id }}',
                'start_date': start_date.getTime(),
                'mode': '{{ mode }}',
                'folder_id':'{{ item.folder_id }}',
                'index':'{{ item.index }}',
                'dialog_action': 'dialog_action'
            };

            let url = '/budgets/{{ budget.id }}/calendar/{{ item.type }}/action';
            $.post(
                url,
                item_form.serialize()+"&"+
                $.param(params)
            ).done(function (jqXHR) {

                $('#dialog_template').modal('hide');
                submit_button.button('reset');
                window.location.reload();
            }).fail(function (jqXHR) {
                bootbox.alert(jqXHR.responseText);
                submit_button.button('reset');
            });
        });

        {# ***************************************************************** #}
        {# Delete Button #}
        {% if mode=='Update' %}
