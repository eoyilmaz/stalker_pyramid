{% extends "base.jinja2" %}

{# BREADCRUMBS #}
{% block breadcrumbs %}
    {% include 'breadcrumb/breadcrumbs.jinja2' %}
{% endblock breadcrumbs %}

{#SIDEBAR#}
{% block sidebar %}
    {% set budget=entity %}
    {% include 'sidebar.jinja2' %}
{% endblock sidebar %}

{#PAGE-CONTENT#}
{% block page_content %}

    <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
           {% set budget=entity %}
           {% include 'budget/view/budget_header.jinja2' %}
        </div>
        <div class="widget-body">
            <div class="widget-main padding-24">
                <div class="row-fluid">
                    <div class="span9">
                        <div class="row-fluid">
                            {% include 'budget/view/budget_summary.jinja2' %}
                        </div>
                        <div class="space-20"></div>
                        <div class="row-fluid">
                            {% set project=budget.project %}
                            {% include 'budget/view/budget_totals.jinja2' %}
                        </div>
                        <div class="space-20"></div>
                        <div class="row-fluid">
                            {% set project=budget.project %}
                            {% include 'project/view/project_summary.jinja2' %}
                        </div>
                        <div class="row-fluid">
                            {% set project=budget.project %}
                            {% include 'project/dialog/project_roles.jinja2' %}
                        </div>
                    </div>

                    <div class="span3">
                        <div class="row-fluid">
                            <div class="span4 no-padding">
                                <div id="bar_chart" style="width:400px; height:300px; background: rgb(57,57,57)">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span9">
                        {% set note_type="Simple Text" %}
                        {% include 'note/dialog/add_note_dialog.jinja2' %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock page_content %}

{% block extrascripts %}
    <script class="include" type="text/javascript"
            src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/jquery.jqplot.min.js") }}'></script>
    <script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.categoryAxisRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.barRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.dateAxisRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.logAxisRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.canvasAxisTickRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.canvasTextRenderer.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.pointLabels.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.highlighter.min.js") }}'></script>
<script class="include" type="text/javascript"
        src='{{ request.static_url("stalker_pyramid:static/node_modules/as-jqplot/dist/plugins/jqplot.cursor.min.js") }}'></script>

<script src='{{ request.static_url("stalker_pyramid:static/stalker/js/accounting.min.js") }}'></script>
<style>
    .jqplot-target {
        margin: 0px;
        height: 400px;
        width: 1200px;
        color: #dddddd;
    }

    .jqplot-highlighter-tooltip {
        background-color: rgba(57,57,57, 0.9);
        padding: 7px;
        color: #dddddd;
    }
</style>
    <script type="text/javascript">
        window.$(document).ready(function () {

            var total_cost = parseInt({{ entity.get_generic_text_attr('total_cost') }});
            var total_price = parseInt({{ entity.get_generic_text_attr('total_price') }});
            var approved_total_price = parseInt({{ entity.get_generic_text_attr('approved_total_price') }});

            $.jqplot._noToImageButton = true;
            $.jqplot.config.enablePlugins = true;

            var line1 = [
                ['Total Cost', total_cost],
                ['Total Price', total_price],
                ['Approved Total Price', approved_total_price]
            ];

            $('#bar_chart').jqplot([line1], {
                title:'',
                highlighter: {
                    show: true,
                    sizeAdjust: 10
                },
                grid: {
                    background: 'rgba(57,57,57,0.5)',
                    drawBorder: false,
                    shadow: false,
                    gridLineColor: '#666666',
                    gridLineWidth: 2
                },
                seriesColors:['#17BDB8', '#00749F', '#73C774'],
                seriesDefaults:{
                    renderer:$.jqplot.BarRenderer,
                    rendererOptions: {
                        // Set the varyBarColor option to true to use different colors for each bar.
                        // The default series colors are used.
                        varyBarColor: true
                    }
                },
                axes:{
                    xaxis:{
                        renderer: $.jqplot.CategoryAxisRenderer
                    }
                }
            });



        });
    </script>

{% endblock extrascripts %}
