<script type="text/javascript">
    function init_dialog() {
        console.debug('starting to initialize scene dialog!!!');
        var dialog_label = window.jQuery('#dialog_template_label');
        dialog_label.find('span').remove();
        dialog_label.append('<span>{{ mode }} Scene</span>');

        {% raw %}
            var option_template = doT.template(
                '<option value={{=it.id}}>{{=it.name}}</option>'
            );
        {% endraw %}


        {# ***************************************************************** #}
        {# Sequence #}
        var deferred;
        var sequence = window.jQuery('#sequence');
        deferred = chosen_searchable_field_creator(sequence, '/entities/{{ project.id }}/sequences/', option_template);
        {% if sequence %}
            deferred.then(function () {
                    sequence.val({{ sequence.id }}).trigger('liszt:updated');
                });
        {% endif %}


        {# ***************************************************************** #}
        {# Temp Scene #}
        var temp_scene = window.jQuery('#temp_scene');
        deferred = chosen_searchable_field_creator(temp_scene, '/entities/{{ project.id }}/scenes/simple/', option_template);
        deferred.then(function () {
                    temp_scene.trigger('liszt:updated');
                });
        {# ***************************************************************** #}
        {# Temp Shot #}
        var temp_shot = window.jQuery('#temp_shot');
        deferred = chosen_searchable_field_creator(temp_shot, '/entities/{{ project.id }}/shots/simple/', option_template);
        deferred.then(function () {
            temp_shot.trigger('liszt:updated');
        });

        {# ***************************************************************** #}
        {# Shots #}
         window.jQuery('#shot_count').ace_spinner({
            value:{{ shot_count }},
            min:{{ shot_count }},
            max:99,
            step:1,
            btn_up_class:'btn-info',
            btn_down_class:'btn-info'}).on('change', function(){
            // check if it is in the range
            var curr_value = window.jQuery(this).val();
            window.jQuery(this).val(curr_value <= 1 ? 1 : curr_value);
        });
        {# ***************************************************************** #}
        {# Submit Button #}
        var submit_button = window.jQuery('#dialog_template_submit_button');
        submit_button.on('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            submit_button.button('loading');
            var scene_form = window.jQuery('#scene_form');

            var url = '/scenes/{{ mode.lower() }}'
            {% if mode == 'Update' %}
                url = '/scenes/{{ scene.id }}/{{ mode.lower() }}'
            {% endif %}

            window.jQuery.post(
                url,
                scene_form.serialize()
            ).done(function (jqXHR) {
                //window.jQuery('#new_outputs_storage').text(JSON.stringify(jqXHR));
                window.location.reload();
            }).fail(function (jqXHR) {
                bootbox.alert(jqXHR.responseText);
                submit_button.button('reset');
            });
        });

        console.debug('finished initializing the scene dialog!')
    }
</script>

<script type="text/javascript">
    function destruct_dialog() {
        window.jQuery('#scene_name').unbind();
        window.jQuery('#scene_msrp').unbind();
        window.jQuery('#scene_cost').unbind();
        window.jQuery('#scene_unit').unbind();
        window.jQuery('#scene_price_list').unbind();
        window.jQuery('#scene_description').unbind();
        window.jQuery('#dialog_template_submit_button').unbind();

        window.jQuery('#dialog_template').data('modal', null);
    }
</script>



