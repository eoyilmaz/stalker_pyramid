<script class="dialog_loaded"></script>

<div class="row-fluid">
    <div class='span10'>
        <form id='scene_form'
              class='form-horizontal'
              role='form'
              method="post">
            <div class="row-fluid">
                <div class='control-group'>
                    <label class='span3 control-label' for='scene_name'>Scene Name</label>
                    <div class='span9'>
                        <input type='text'
                               id='scene_name'
                               class='input-block-level'
                               name='name'
                               {% if mode=='Update'%}
                                    value="{{ scene.name }}" disabled="true"
                                {% endif %}
                               required>
                    </div>
                </div>
                {# Sequence #}
                <div class='control-group'>
                    <label class='span3 control-label' for='sequence'>Sequence</label>
                    <div class='span9'>
                    {% if mode=='Update'%}
                        <input type='text'
                                   id='sequence_id'
                                   class='input-block-level'
                                   name='sequence_id'
                                   value="{{ sequence.name }}"
                                   disabled="true"
                                   required>
                    {% else %}
                        <select id='sequence'
                                name='sequence_id'
                                class='input-block-level span11'
                                is_updating=false
                                data-placeholder='Sequence'
                                required></select>
                    {% endif %}
                    </div>
                </div>

                {# Temp Scene #}
                <div class='control-group {% if mode=='Update'%}hide{% endif %}' >
                    <label class='span3 control-label' for='temp_scene'>Temp Scene</label>
                    <div class='span9'>
                        <select id='temp_scene'
                                name='temp_scene_id'
                                class='input-block-level span11'
                                is_updating=false
                                data-placeholder='Temp Scene'
                                required></select>
                    </div>
                </div>
                {# Temp Shot #}
                <div class='control-group'>
                    <label class='span3 control-label' for='temp_shot'>Temp Shot</label>
                    <div class='span9'>
                        <select id='temp_shot'
                                name='temp_shot_id'
                                class='input-block-level span11'
                                is_updating=false
                                data-placeholder='Temp Shot'
                                required></select>
                    </div>
                </div>
                {# Shot Count #}
                <div class='control-group'>
                    <label for='shot_count' class='span3 control-label'># Shots</label>
                    <div class='span9'>
                        <input id='shot_count'
                               name='shot_count'
                               min=1
                               max=999
                               type='text'
                               placeholder='Shot Count'
                               value={{ shot_count }}
                               required />
                    </div>
                </div>
                {#Description #}
                <div class="control-group'">
                    <label for="scene_description"
                           class="span3 control-label">Description</label>
                    <div class="span9">
                        <textarea id="scene_description"
                                  name='description'
                                  class='input-block-level'
                                  style="overflow: hidden;
                                             word-wrap: break-word;
                                             resize: horizontal;
                                             height: 150px;"
                        ></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

