{% extends "base.jinja2" %}

{% block sidebar %}
    <div class='col-lg-2'>
        {% include 'auth/user_sidebar.jinja2' %}
    </div>
{% endblock sidebar %}



{% block main_content %}
    <div class='col-lg-10'>
        <div class='row'>
            <div class='span2'>
            </div>
        
            <div class='span6'>
                <h3 class='text-center'>My Tasks Today</h3>
                <table class='table table-hover'>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Completed</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks_today %}
                        <tr class={% if task.percent_complete == 0 %}'error'{% elif task.percent_complete >= 100 %}'success'{% else %}'warning'{% endif %}>
                            <td>{{ task.id }}</td>
                            <td><a href='{{ request.route_url('view_task', id=task.id) }}'>{{ task.name }}</a></td>
                            <td>{{ task.start }}</td>
                            <td>{{ task.end }}</td>
                            <td>%{{ '%i' | format(task.percent_complete) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        
        
            <div class='span2'>
            </div>
        </div>
        
        <div class='row'>
            <div class='span2'>
            </div>
        
            <div class='span6'>
                <h3 class='text-center'>My Projects</h3>
                <table class='table table-hover'>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Completed</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for project in logged_in_user.projects %}
                        <tr class={% if project.percent_complete == 0 %}'error'{% elif project.percent_complete >= 100 %}'success'{% else %}'warning'{% endif %}>
                            <td>{{ project.id }}</td>
                            <td><a href='{{ request.route_url('view_project', id=project.id) }}'>{{ project.name }}</a></td>
                            <td>{{ project.start }}</td>
                            <td>{{ project.end }}</td>
                            <td>%{{ '%i' | format(project.percent_complete) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        
        
            <div class='span2'>
            </div>
        </div>
    </div>    
{% endblock main_content %}
