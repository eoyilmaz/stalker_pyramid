{% extends "base.jinja2" %}

{% block pre_header %}

{% endblock pre_header %}

{% block breadcrumbs %}
    {% include 'breadcrumb/breadcrumbs.jinja2' %}
{% endblock breadcrumbs %}

{% block sidebar %}
    {% include 'sidebar.jinja2' %}
{% endblock sidebar %}

{% block page_content %}
    <div class="widget-box transparent">
        <div class="widget-header widget-header-small header-color-green">
            <h4 class="smaller">
                Results
            </h4>
        </div>
        <div class="widget-body">
            <div class="widget-main">
                {% if results %}
                    {% for result in results %}
                        {# TODO: The next line is a dirty fix, so do it properly, (Bug: there are no views for Types so 'view_type' creates an error) #}
                        {% if result.entity_type in ['Project', 'Task', 'Asset', 'Shot', 'Sequence', 'User', 'Studio', 'Ticket', 'Department', 'Group'] %}
                        <div class="profile-activity clearfix">
                            <div>
                                <i class="icon-angle-right bigger-80"></i>
                                <a class=""
                                   href="{{ request.route_url('view_%s' % result.entity_type.lower(), id=result.id) }}">
                                    {{ result.name }}{% if result.parents %}
                                    {% for parent in result.parents %}
                                       | {{ parent.name }}
                                    {% endfor %}
                                {% endif %}
                                </a>({{ result.entity_type }})
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    <div class="profile-activity clearfix">
                        <div>
                            <i class="icon-angle-right bigger-80"></i>
                            No Results
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock page_content %}
