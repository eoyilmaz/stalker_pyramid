<script type="text/javascript">
    function init_dialog() {
        console.debug('starting to initialize good dialog!!!');
        var dialog_label = window.jQuery('#dialog_template_label');
        dialog_label.find('span').remove();
        dialog_label.append('<span>{{ good.name }}</span>');

        {% raw %}
            var good_option_template = window.dot_template(
                '<option value={{=it.id}}>{{=it.name}}</option>'
            );
        {% endraw %}
        var related_good = window.jQuery('#related_good');

        window.jQuery.getJSON('/goods/').then(function (all_goods) {
            window.jQuery.getJSON('/goods/{{ good.id }}/related_goods/').then(function (related_goods) {
                console.log('data loaded')
                // remove current data
                related_good.empty();

                var i, data_count = all_goods.length;
                for (i = 0; i < data_count; i += 1) {
                    var in_related_list = false;
                    for (var j = 0; j < related_goods.length; j += 1) {
                        if(related_goods[j]['id'] == all_goods[i].id || '{{ good.id }}' == all_goods[i].id ){
                            in_related_list = true;
                        }
                    }
                    if(!in_related_list){
                        related_good.append(good_option_template(all_goods[i]));
                    }

                }
                // set the field to normal mode
                related_good.attr('is_updating', false);
            });
        });

        window.jQuery('#ratio').ace_spinner({
            value:1,
            min:0,
            max:100,
            step:0.1,
            icon_up:'icon-caret-up',
            icon_down:'icon-caret-down',
            btn_up_class:'btn-info',
            btn_down_class:'btn-info'}).on('change', function(){
            // check if it is in the range
            var curr_value = window.jQuery(this).val();
{#            window.jQuery(this).val(curr_value <= 1 ? 1 : curr_value);#}
        });



        window.jQuery('#dialog_template_footer').hide();
        {# ***************************************************************** #}
        {# Submit Button #}
        var submit_button = window.jQuery('#dialog_template_submit_button');
        submit_button.on('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            submit_button.button('loading');
            var related_good_form = window.jQuery('#related_good_form');

            var url = '/goods/{{ good.id }}/update/relation';

            window.jQuery.post(
                url,
                related_good_form.serialize()
            ).done(function (jqXHR) {
                //window.jQuery('#new_outputs_storage').text(JSON.stringify(jqXHR));
                window.location.reload();
            }).fail(function (jqXHR) {
                bootbox.alert(jqXHR.responseText);
                submit_button.button('reset');
            });
        });

        console.debug('finished initializing the good dialog!')
    }
</script>

<script type="text/javascript">
    function destruct_dialog() {
        window.jQuery('#related_good').unbind();
        window.jQuery('#ratio').unbind();
        window.jQuery('#dialog_template_submit_button').unbind();

        window.jQuery('#dialog_template').data('modal', null);
    }
</script>



