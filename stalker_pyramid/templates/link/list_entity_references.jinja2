{#PAGE-CONTENT#}
{% block page_content %}

        {% set page_title='References' %}
    {% include 'page_header.jinja2' %}
    <div class="row-fluid">

        <!--PAGE CONTENT BEGINS-->

            <button data-target="#dialog_template"
                data-toggle="modal"
                data-keyboard="false"
                href="{{ request.route_url('upload_entity_reference_dialog', id=entity.id) }}"
