{% extends "base.jinja2" %}

{% block pre_header %}
   {% include 'task/list/list_tasks_preheader.jinja2' %}
{% endblock pre_header %}

{% block breadcrumbs %}
    {% set page_title='Tasks' %}
    {% include 'breadcrumb/breadcrumbs.jinja2' %}
{% endblock breadcrumbs %}

{% block sidebar %}
    {% include 'sidebar.jinja2' %}
{% endblock sidebar %}

{% block page_content %}
    {% set page_title=task_type %}
    {% include 'page_header.jinja2' %}

   <div id="loading_spinner" class="well well-sm">

        <div class="inline middle blue bigger-110"><i
                class="icon-spinner icon-spin orange bigger-125"></i>
            Loading
            content...
        </div>
    </div>

    <div class="row-fluid">

    <table id="items_table"
                       class="table table-striped table-bordered table-hover">

                    <thead>
                    <tr id="tasks_table_column">

                    </tr>
                    </thead>
                    <tbody>

                    </tbody>

                </table>


    </div>
{% endblock page_content %}

