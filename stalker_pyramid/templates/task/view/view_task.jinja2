{% extends "base.jinja2" %}

{#PRE-HEADER #}
{% block pre_header %}

    <link rel="stylesheet"
          href='{{ request.static_url("stalker_pyramid:static/ace/css/fullcalendar.css") }}'/>
    <link rel="stylesheet"
          href='{{ request.static_url("stalker_pyramid:static/ace/css/bootstrap-timepicker.css") }}'/>
    <link rel="stylesheet"
          href='{{ request.static_url("stalker_pyramid:static/ace/css/datepicker.css") }}'/>
    <link rel="stylesheet"
          href='{{ request.static_url("stalker_pyramid:static/ace/css/daterangepicker.css") }}'/>

    {% include 'charts/chart_preheader.jinja2' %}

{% endblock pre_header %}

{#SIDEBAR#}
{% block sidebar %}

    {% include 'sidebar.jinja2' %}
{% endblock sidebar %}

{# BREADCRUMBS #}
{% block breadcrumbs %}
    {% set page_title='Dashboard' %}
    {% include 'breadcrumb/breadcrumbs.jinja2' %}
{% endblock breadcrumbs %}

{#PAGE-CONTENT#}
{% block page_content %}
    <div class="row-fluid">
        <div class="widget-box transparent invoice-box">
            <div class="widget-header widget-header-small">
                <h3 class="pull-left position-relative">
                    {{ entity.name }}
                    <i class="icon-double-angle-right"></i>
                    <small class="green">{{ entity.type.name }}</small>
                </h3>

                <div class="widget-toolbar no-border invoice-info">
                    <span class="invoice-info-label">{{ entity.status.name }}</span>
                </div>

                <div class="widget-toolbar hidden-480">
                    <a href="#">
                        <i class="icon-info"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main padding-10">
                    <div class="row-fluid">
                        <div class="span8">
                            <div class="row-fluid">
                                {% if entity.thumbnail %}
                                    <div class="span2">

                                        <a class="pull-left" href="#"
                                           style="width: 180px; height: 180px">
                                            <img style='width:auto; height: auto;'
                                                 class="img-thumbnail"
                                                 src="/{{ entity.thumbnail.full_path }}">
                                        </a>

                                    </div>
                                {% endif %}
                                <div class="span4 pull-left">
                                    <ul class="unstyled spaced">
                                        <li>
                                            <h5><b> {{ entity.start }} <i
                                                    class="icon-long-arrow-right blue"></i> {{ entity.end }}
                                            </b></h5>
                                        </li>

                                        <li>

                                            <b>Created By
                                                : </b> {{ entity.created_by.name }}
                                        </li>
                                        <li>
                                            <b>Updated By
                                                : </b> {{ entity.updated_by.name }}
                                        </li>
                                    </ul>
                                    <button id='task_update_button'
                                            class='btn btn-mini btn-info'
                                            data-target="#dialog_template"
                                            data-toggle="modal"
                                            data-keyboard="false"
                                            href='{{ request.route_url("update_task_dialog", id=entity.id) }}'
                                            >
                                        <i class="icon-edit"></i> Update
                                    </button>
                                    {% if entity.responsible == logged_in_user and entity.status.code == 'PREV' %}
                                        <button id='task_review_button'
                                                class='btn btn-mini btn-info'
                                                data-target="#dialog_template"
                                                data-toggle="modal"
                                                data-keyboard="false"
                                                href='{{ request.route_url("review_task_dialog", id=entity.id) }}'
                                                >
                                            <i class="icon-comment"></i> Review
                                        </button>
                                    {% endif %}
                                    
                                    <div class="space-12"></div>
                                    {% if entity.description %}

                                        <div class="well">
                                            <h4 class="green smaller lighter">
                                                <i class="icon-info"></i>
                                                Description
                                            </h4>
                                            {{ entity.description }}
                                        </div>

                                    {% endif %}

                                </div>
                                <div class="span3 pull-left">
                                    <ul class="unstyled spaced">
                                        <li>

                                            <b>Schedule Hours
                                                : </b> {{ entity.schedule_seconds/3600 }}
                                            h
                                        </li>
                                        <li>
                                            <b>Total Logged Hours
                                                : </b> {{ entity.total_logged_seconds/3600 }}
                                            h
                                        </li>
                                        <li>
                                            <b>Hours to Complete
                                                : </b> {{ (entity.schedule_seconds - entity.total_logged_seconds)/3600 }}
                                            h
                                        </li>
                                    </ul>
                                </div>
                                <div class="span3">

                                    <div class="pull-right" id="pie_chart"
                                         style="width: 200px; height: 200px;"></div>

                                </div>


                            </div>

                            <div class="hr hr8 hr-double"></div>

                            <div class="space-32"></div>

                            <div class="row-fluid">
                                <div id="calendar"></div>
                            </div>

                        </div>
                        <div class="span4">

                            <div class="row-fluid">
                                <div id="resources_box"
                                     class="widget-box hide">
                                    <div class="widget-header header-color-red">
                                        <h4 class="smaller">Resources</h4>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main padding-12">
                                            <div id="resource_tree"
                                                 class="tree"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="space-12"></div>
                            <div class="row-fluid">
                                <div id="depends_box"
                                     class="widget-box hide">
                                    <div class="widget-header header-color-orange">
                                        <h4 class="smaller">Depends</h4>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main padding-12">
                                            <div id="depends_tree"
                                                 class="tree"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock page_content %}

