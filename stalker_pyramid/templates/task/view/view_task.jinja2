<script type="text/javascript">

    function showErrorAlert(reason, detail) {
        var msg = '';
        if (reason === 'unsupported-file-type') {
            msg = "Unsupported format " + detail;
        } else if (reason === 'big-file-size') {
            msg = "File is too big " + detail + ' bytes';
        } else {
            console.log("error uploading file", reason, detail);
        }
        $('<div class="alert"> <button type="button" class="close" data-dismiss="alert">&times;</button>' +
                '<strong>File upload error</strong> ' + msg + ' </div>').prependTo('#alerts');
    }

    $(function () {
        $('#refresh_task_button').on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();

            $.post('/tasks/{{ entity.id }}/fix/statuses/').done(function (response_text) {
                window.location.reload();
            }).fail(function (jqXHR) {
                bootbox.alert(jqXHR.responseText);
            });
        });

        $('#watch_or_unwatch_task_button').on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            var self = $(this);
            var url = self.attr('href');
            $.post(url).done(function(){
                // change icon
                if (self.attr('watching') === 'true') {
                    self.attr('watching', 'false');
                    self.find('i').removeClass('icon-eye-close').addClass('icon-eye-open');
                    flash_message({
                        title: 'Unwatch Task',
                        message: 'You are not watching this task anymore!',
                        type: 'error'
                    })
                } else {
                    self.attr('watching', 'true');
                    self.find('i').removeClass('icon-eye-open').addClass('icon-eye-close');
                    flash_message({
                        title: 'Watching Task',
                        message: 'You are now watching this task!',
                        type: 'success'
                    })
                }
            });
        });

    });


    $(function () {
        var icon_name = get_icon('{{ entity.entity_type.lower()}}');
        $('#task_header').append('<i class="' + icon_name + ' bigger-125"></i>{{ entity.name }}');

        {% if has_permission('Update_Task') %}
            var inline_update_url = '/tasks/{{ entity.id }}/update/inline';

            //editables
            $('#editable_entity_name').editable({
                type: 'text',
                name: 'name',
                success: function (response, newValue) {
{#                    console.log('newValue ' + newValue);#}

                    var params = $.param({
                        attr_name: 'name',
                        attr_value: newValue
                    });

                    $.post(
                        inline_update_url, params
                    ).done(function () {
{#                        console.log('done');#}
                    }).fail(function (jqXHR) {
                        bootbox.alert('<div id="message" class="alert alert-danger bigger-110">' + jqXHR.responseText + '</div>');
                    });
                }
            });
            $('#editable_entity_priority').editable({
                type: 'spinner',
                name: 'priority',
                spinner : {
                    min : 0, max:1000, step:1,
                    icon_up:'icon-caret-up',
                    icon_down:'icon-caret-down'
                },
                success: function (response, newValue) {
                    var params = $.param({
                        attr_name: 'priority',
                        attr_value: parseInt(newValue)
                    });

                    $.post(
                        inline_update_url, params
                    ).done(function () {
                        console.log('done');
                    }).fail(function (jqXHR) {
                        bootbox.alert('<div id="message" class="alert alert-danger bigger-110">' + jqXHR.responseText + '</div>');
                    });
                }
            });

            $.getJSON('/types/?target_entity_type={{ entity.entity_type }}').then(function (available_types) {
                var entity_types = [];

                for (var i = 0; i < available_types.length; i++) {
                    entity_types.push({
                        id: available_types[i].id,
                        text: available_types[i].name
                    })
                }

                if (entity_types.length > 0) {
                    $('#editable_entity_type').editable({
                        type: 'select2',
                        value: '{% if entity.type %}{{ entity.type.id }}{% endif %}',
                        source: entity_types,
                        success: function (response, newValue) {

                            var params = $.param({
                                attr_name: 'type',
                                attr_value: newValue
                            });

                            $.post(
                                inline_update_url, params
                            ).done(function () {
{#                                console.log('done');#}
                            }).fail(function (jqXHR) {
                                bootbox.alert('<div id="message" class="alert alert-danger bigger-110">' + jqXHR.responseText + '</div>');

                            });
                        }
                    });
                }
                else {
                    $('#editable_entity_type').editable({
                        type: 'text',
                        value: '{{ entity.entity_type }}',
                        disabled: true
                    });
                }
            });

            $('#editable_entity_description').editable({
                mode: 'inline',
                type: 'wysiwyg',
                name: 'editable_entity_description',
                toggle:'manual',

                wysiwyg: {
                    maxFileSize: 2000000,
                    fileUploadError: showErrorAlert
                },

                success: function (response, newValue) {
                    $('#description_loading').show();

                    var params = $.param({
                        attr_name: 'description',
                        attr_value: newValue
                    });

                    $.post(inline_update_url, params).done(function () {

                        $.getJSON('{{request.route_url('get_task', id=entity.id) }}').then(
                            function (data) {
                                $('#editable_entity_description').val(data.description);
                                $('#description_loading').hide();
                            }
                        );

                    }).fail(function (jqXHR) {
                        bootbox.alert('<div id="message" class="alert alert-danger bigger-110">' + jqXHR.responseText + '</div>');
                        $('#description_loading').hide();

                    });
                }
            });

            $('#entity_description_edit_trigger').on('click', function(e){
                e.stopPropagation();
                $('#editable_entity_description').editable('toggle');
            });
            
        {% endif %}


        $('#add_note_button').on('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            // disable the submit_button
            var submit_button = $(this);
            submit_button.button('loading');

            var editor = $('.wysiwyg-editor');
            var content = editor.cleanHtml();
            var content_as_text = editor.text();

            $.post(
                "/note/create",
                $.param({
                    content: content,
                    content_as_text: content_as_text,
                    type: "Simple Text",  {# TODO: it is not simple text anymore, update it. #}
                    entity_ids:{{ entity.id }}
