<ul id="breadcrumb_budget" class="breadcrumb">

    <li>
        <a href="{{ request.route_url('view_budget', id=invoice.budget.id) }}">{{ invoice.budget.name }}</a>
        <span class="divider">
          <i class="icon-angle-right arrow-icon"></i>
        </span>
    </li>
    <li>
        <a href="{{ request.route_url('list_budget_invoices', id=invoice.budget.id) }}">Invoices</a>
        <span class="divider">
          <i class="icon-angle-right arrow-icon"></i>
        </span>
    </li>
    <li>
        <div class="btn-group">
            <button tabindex="-1"
                    data-toggle="dropdown"
                    class="btn btn-mini btn-danger dropdown-toggle">{{ invoice.name }}
                <i class="icon-angle-down icon-on-right"></i>
            </button>
            <ul class="dropdown-menu dropdown-danger scroll-menu">

                {% for a_invoice in invoice.budget.invoices|sort(attribute='name') %}
                    <li><a href="{{ request.route_url('view_invoice', id=a_invoice.id) }}">{{ a_invoice.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </li>

</ul>
<!--.breadcrumb-->
