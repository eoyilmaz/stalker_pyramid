                        title =  end_date.format('HH:MM') +' '+ data[i].title;
                    }

                    var event = {
                        eId: data[i].id,
                        entity_type: data[i].entity_type,
                        title: title,
                        start: start_date,
                        end: end_date,
                        className: data[i].className,
                        allDay: data[i].allDay
                    };

                    events.push(event);
                }
                drawCalendar('calendar', events);
