<div style="margin-top: 0" id='group_border_container'>
    {#  <div id='group_summary'>#}
    {# Summary View #}
    {#  </div>#}
    <div id='group_related_data_tab_container'>
        <div id='tickets_pane'></div>
        <div id='departments_pane'></div>
    </div>
</div>

<script type='text/javascript'>
    require([
        'dijit/layout/BorderContainer',
        'dijit/layout/TabContainer',
        'dojox/layout/ContentPane',

        'dojo/domReady!'
    ], function (BorderContainer, TabContainer, ContentPane) {

        var group_BorderContainer = new BorderContainer({
            id: 'group_border_container',
            region: 'center',
            orientation: 'vertical',
            splitter: true,
            resizable: false,
            style: 'width:100%; height:100%; margin:0;'
        }, 'group_border_container');

        var summary_content_pane = new ContentPane({
            title: 'Summarize',
            href: 'groups/{{ group.id }}/summarize',
            region: 'top',
            style: 'width:100%; height:150px; padding: 0; background-color: #eeeeee;',
            splitter: true

        });

        group_BorderContainer.addChild(summary_content_pane);

        // **********************************************************************
        // Bottom Part - Complex Data View
        var group_related_data_tab_container = new TabContainer({
            title: 'Tab',
            region: 'center',
            style: 'width: 100%; background-color: #f8acac;'

        });

        {% if has_permission('List_Permission') %}
            var permissions_content_pane = new ContentPane({
                id: 'permission_content_pane',
                title: 'Permissions',
                href: 'groups/{{ group.id }}/permissions/list',
                style: 'padding: 0; margin:0;'
            });

            group_related_data_tab_container.addChild(permissions_content_pane);
        {% endif %}

        {% if has_permission('List_User') %}

            var users_content_pane = new ContentPane({
                title: 'Users',
                href: 'groups/{{ group.id }}/users/list',
                style: 'padding: 0; margin:0;'
            });

            group_related_data_tab_container.addChild(users_content_pane);
        {% endif %}



        group_BorderContainer.addChild(group_related_data_tab_container);

        group_related_data_tab_container.startup();
        group_BorderContainer.startup();
    });
</script>

