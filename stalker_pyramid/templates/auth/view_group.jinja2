{% extends "base.jinja2" %}

{% block main_container %}
    {% set group=entity %}
    {% set users=entity.users %}


    <div class="media">
        <a class="pull-left" href="#" style="width: 132px; height: 132px">
            <img style='width:auto; height: auto;' class="img-thumbnail"
                 src="{%- if group.thumbnail -%}
                    /{{ group.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}
                {%- endif -%}">
        </a>

        <div class="media-body">
            <h2 class="media-heading">{{ group.name }}
                <small> {{ group.description }}</small>
            </h2>
            <button class='btn btn-primary btn-sm'>Edit Group Â»</button>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="bs-example">
            <ul class="nav nav-tabs" style="margin-bottom: 15px;">
                <li class="active">
                    <a href="#group_permissions"
                       data-toggle="tab">Permissions</a>
                </li>
                <li class="">
                    <a href="#group_users" data-toggle="tab">Users</a>
                </li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="group_permissions">
                    <div class='col-lg-12'>
                        <div class="panel">
                            <!-- Default panel contents -->


                            <!-- Table -->
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Action Name</th>
                                    <th>Create</th>
                                    <th>Read</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                    <th>List</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for permission in group.permissions %}
                                    <tr>
                                        <td>{{ permission.action }}</td>
                                        <td>{{ permission.access }}</td>
                                        <td>{{ permission.action }}</td>
                                        <td>@mdo</td>
                                        <td>@mdo</td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="group_users">
                    <div class='col-lg-12'>
                        <div class="row">
                            {% for user in users %}
                                {% include 'auth/list_item_user.jinja2' %}
                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock main_container %}