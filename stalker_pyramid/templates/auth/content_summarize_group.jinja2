<div id='group_details_content_pane'>
    <div style="background-color: #f8acac;" class="page_title"></div>

     {# Avatar #}
    <div id='group_avatar'
         class='thumbnail'>
        {% if not group.thumbnail %}
            <img src='{{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}'
                 alt=''
                 style='width:auto; height:150px;'>
        {% else %}
            <img src='{{ group.thumbnail.full_path }}'
                 alt=''
                 style='width:auto; height:150px;'>
        {% endif %}
        <div class='thumbnail_menu'>&nbsp</div>
    </div>

    {# Basic Info #}
    <div id='group_info' class='summary_info'>
        <h3 style='margin: 0; text-align: left;'>{{ group.name }}</h3>
        <table>
            {% if group.description %}
                <tr>
                    <td style='text-align: right'><strong>Description</strong>
                    </td>
                    <td>&nbsp;</td>
                    <td>{{ group.description }}</td>
                </tr>
            {% endif %}
            <tr>
                <td style='text-align: right'><strong>Created By</strong>
                </td>
                <td>&nbsp;</td>
                <td>
                    {% if has_permission('Read_User') %}
                        <a href="javascript:redirectLink('central_content',
                        'users/{{ group.created_by.id }}/view');">
                            {{ group.created_by.name }}
                        </a>
                    {% else %}
                        {{ group.created_by.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td style='text-align: right'></td>
                <td>&nbsp;</td>
                <td>
                    {% if has_permission('Update_Group') %}
                        <button id='update_group_button'>Update</button>
                    {% endif %}
                </td>
            </tr>
        </table>

    </div>
</div>

<script type='text/javascript'>
    require([
        'dijit/registry',
        'dijit/form/Button',
        'stalker/dialogs',
        'stalker/thumbnailMenu',
        'stalker/dialogCaller',
        'dojo/domReady!'
    ], function (registry, Button, dialogs, thumbnailMenu, dialogCaller) {

        // ********************************************************************
        // Update Group Button
        var group_summary_updater = function () {
            // refresh the content pane
            // get the content pane by id, alternatively we can use the parent of the button
            var content_pane = update_group_button.getParent();
            // refresh the pane
            content_pane.refresh();

            // Refresh the Permission Tab if it is visible
            var permission_tab = registry.byId('permission_content_pane');
            permission_tab.refresh();
        };

        {% if has_permission('Update_Group') %}
            var update_group_button = dialogCaller({
                label: 'Update',
                dialog_id: 'group_dialog',
                content_creator: dialogs.update_group_dialog,
                attach_to: 'update_group_button',
                related_field_updater: group_summary_updater,
                data_id: {{ group.id }}
            });
            update_group_button.startup();

             thumbnailMenu({
                targetNodeIds: ['group_avatar'],
                selector: '.thumbnail_menu',
                entity_id: {{ group.id }},
                related_field_updater: function () {
                    var content_pane = update_group_button.getParent();
                    if (content_pane != null) {
                        content_pane.refresh();
                    }
                }
            });
        {% endif %}

    });
</script>

