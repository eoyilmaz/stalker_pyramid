{# Render Studio Side Bar #}

{% set studio=entity %}

<ul class='nav nav-list'>
    {# Thumbnail #}
        <li>
            <div class="media">
                <a class="pull-left" href="#" style="width: 100px; height: 100px">
                    <img style='width:auto; height: 100px;'
                         class="img-thumbnail"
                         src="{%- if studio.thumbnail -%}
                        /{{ studio.thumbnail.full_path }}
                    {%- else -%}
                        {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_0.png") }}
                    {%- endif -%}">
                </a>

                <div class="media-body">
                    <h5 class="media-heading">{{ studio.name }}
                    </h5>

                  <a href="#" class="menu-text">
                    <i class="icon-edit"></i>
                    Edit
                  </a>
                </div>
            </div>
        </li>
    {#Dashboard#}
    {% if request.current_route_path() == request.route_path('view_studio', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-dashboard"></i>
                <span class="menu-text">Dashboard</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('view_studio', id=studio.id) }}'>
                <i class="icon-dashboard"></i>
                <span class="menu-text">Dashboard</span>
            </a>
        </li>
    {% endif %}

    {#Resources#}
    {% if request.current_route_path() == request.route_path('list_entity_resources', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-calendar"></i>
                <span class="menu-text">Resources</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_entity_resources', id=studio.id) }}'>
                <i class="icon-calendar"></i>
                <span class="menu-text">Resources</span>
            </a>
        </li>
    {% endif %}


    {# Tasks #}
    {% if request.current_route_path() == request.route_path('list_studio_tasks', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-tasks"></i>
                <span class="menu-text">Tasks</span>
                <span class='badge badge-info'>{{ studio.tasks | count }}</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_studio_tasks', id=studio.id) }}'>
                <i class="icon-tasks"></i>
                <span class="menu-text">Tasks</span>
                <span class='badge badge-info'>{{ studio.tasks | count }}</span>
            </a>
        </li>
    {% endif %}

    {# Projects #}
    {% if request.current_route_path() == request.route_path('list_studio_projects', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-user"></i>
                <span class="menu-text">Projects</span>
                <span class='badge badge-success'>{{ studio.projects | count }}</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_studio_projects', id=studio.id) }}'>
                <i class="icon-user"></i>
                <span class="menu-text">Projects</span>
                <span class='badge badge-success'>{{ studio.projects | count }}</span>
            </a>
        </li>
    {% endif %}
    {# Users #}
    {% if request.current_route_path() == request.route_path('list_studio_users', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-user"></i>
                <span class="menu-text">Users</span>
                <span class='badge badge-success'>{{ studio.users | count }}</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_studio_users', id=studio.id) }}'>
                <i class="icon-user"></i>
                <span class="menu-text">Users</span>
                <span class='badge badge-success'>{{ studio.users | count }}</span>
            </a>
        </li>
    {% endif %}

    {# Department #}
    {% if request.current_route_path() == request.route_path('list_studio_departments', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-group"></i>
                <span class="menu-text">Department</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_studio_departments', id=studio.id) }}'>
                <i class="icon-group"></i>
                <span class="menu-text">Departments</span>
            </a>
        </li>
    {% endif %}

    {# Groups #}
    {% if request.current_route_path() == request.route_path('list_groups') %}
        <li class='active'>
            <a>
                <i class="icon-key"></i>
                <span class="menu-text">Groups</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_groups') }}'>
                <i class="icon-key"></i>
                <span class="menu-text">Groups</span>
            </a>
        </li>
    {% endif %}

    {# Vacations #}
    {% if request.current_route_path() == request.route_path('list_studio_vacations', id=studio.id) %}
        <li class='active'>
            <a>
                <i class="icon-sun"></i>
                <span class="menu-text">Vacations</span>
                <span class="badge badge-success">{{ studio.vacations | count }}</span>
            </a>
        </li>
    {% else %}
        <li>
            <a href='{{ request.route_url('list_studio_vacations', id=studio.id) }}'>
                <i class="icon-sun"></i>
                <span class="menu-text">Vacations</span>
                <span class="badge badge-success">{{ studio.vacations | count }}</span>
            </a>
        </li>
    {% endif %}


</ul>
