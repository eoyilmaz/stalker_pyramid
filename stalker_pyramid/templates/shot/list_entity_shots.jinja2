{% extends "base.jinja2" %}

{% block breadcrumbs %}
    {% set page_title='Shots' %}
    {% include 'breadcrumbs.jinja2' %}
{% endblock breadcrumbs %}

{% block sidebar %}

    {% include 'sidebar.jinja2' %}

{% endblock sidebar %}

{% block page_content %}

    {% set page_title='Shots' %}
    {% include 'page_header.jinja2' %}

    {% set shots=entity.shots %}

    {% for shot in shots %}

      {% if (loop.index0 % 6) == 0 %}
           <div class="row-fluid">
      {% endif %}

      {% include 'shot/list_item_shot.jinja2' %}


      {% if (loop.index0 % 6) == 5 %}
          </div>
          <div class="space"></div>
      {% endif %}
    {% endfor %}
{% endblock page_content %}
