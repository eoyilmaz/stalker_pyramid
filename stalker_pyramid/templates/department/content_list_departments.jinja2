<div id='view_departments' style="width: 100%; height: 100%">
    {% if has_permission('Update_User') and has_permission('Update_Department') %}
        <button id='view_departments_append_department_button'>Append
            Department
        </button>
    {% endif %}
    <div style='width:100%; height: 100%; position: absolute;'>
        <div id='departments_data_grid'
             style="position: static; width: 100%; height: 100%;"></div>
    </div>
</div>

<script type='text/javascript'>
    require([
        'dojo/store/Memory',
        'dojo/store/JsonRest',
        'dojo/data/ObjectStore',

        "dgrid/List",
        "dgrid/Grid",
        "dgrid/Selection",
        "dgrid/Keyboard",
        "dojo/_base/declare",

        'stalker/dialogs',
        'stalker/fieldUpdater',
        'stalker/dialogCaller',

        'dojo/domReady!'
    ], function (Memory, JsonRest, ObjectStore, List, Grid, Selection,
                 Keyboard, declare, dialogs, fieldUpdater, dialogCaller) {

        var StandardGrid = declare([Grid, Selection, Keyboard]);
        var departments_DataGrid = new StandardGrid({
            id: 'departments_data_grid',
            width: '100%',
            height: '100%'
        }, 'departments_data_grid');

        {% if has_permission('Update_User') and has_permission('Update_Department') %}
            var append_department_button = dialogCaller({
                label: 'Append Department',
                dialog_id: 'append_department_dialog',
                content_creator: dialogs.append_departments_dialog,
                attach_to: 'view_departments_append_department_button',
                related_field_updater: departments_DataGrid_updater,
                data_id: '{{ entity.id }}'
            });
            append_department_button.startup();
        {% endif %}


        function departments_DataGrid_updater() {

            var department_memory = new JsonRest({
                target: 'entities/{{ entity.id }}/departments/'
            });

            department_memory.query().then(function (data) {

                var columns = [
                    {
                        label: "Thumbnail",
                        field: 'thumbnail',
                        sortable: false,
                        get: function (object) {
                            return object; // return entire item for formatter to use
                        },
                        formatter: function (object) {

                            var path = '{{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}';
                            if (object.thumbnail_path) {
                                path = object.thumbnail_path;
                            }
                            return '<img width= "60px"; src="' + path + '">';

                        }
                    },
                    {
                        field: 'name',
                        label: "Name",
                        get: function (object) {
                            return object; // return entire item for formatter to use
                        },
                        formatter: function (value) {

                            {% if has_permission('Read_Department') %}
                                var targetPane = "'central_content'";
                                var address = "'departments/" + value.id + "/view'";

                                return '<a href="javascript:redirectLink(' + targetPane + ',' + address + ');">' + value.name + '</a>';

                            {% else %}
                                return  value.name;

                            {% endif %}
                        }
                    }
                ];


                departments_DataGrid.renderArray(data);

                departments_DataGrid.set('columns', columns);

            });

        }

        departments_DataGrid_updater();
    });

</script>

