{% extends "base.jinja2" %}

{% block pre_header %}
    {% include 'task/list_entity_tasks_preheader.jinja2' %}
{% endblock pre_header %}

{% block main_container %}
    {% set department=entity %}
    {% set users=entity.users %}


    <div class="media">
        <a class="pull-left" href="#" style="width: 132px; height: 132px">
            <img style='width:auto; height: auto;' class="img-thumbnail"
                 src="{%- if department.thumbnail -%}
                    /{{ department.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}
                {%- endif -%}">
        </a>

        <div class="media-body">
            <h2 class="media-heading">{{ department.name }}
                <small> {{ department.description }}</small>
            </h2>
            <button class='btn btn-primary btn-sm'>Edit Department Â»</button>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="bs-example">
            <ul class="nav nav-tabs" style="margin-bottom: 15px;">
                <li class="active">
                    <a href="#department_tasks" data-toggle="tab">Tasks</a>
                </li>
                <li class="">
                    <a href="#department_users" data-toggle="tab">Users</a>
                </li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="department_tasks">
                    <div class='col-lg-12'>
                        {% include 'task/list_entity_tasks_module.jinja2' %}
                    </div>
                </div>
                <div class="tab-pane fade" id="department_users">
                    <div class='col-lg-12'>
                        <div class="row">
                            {% for user in users %}
                                {% include 'auth/list_item_user.jinja2' %}
                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock main_container %}