{% extends "base.jinja2" %}

{# BREADCRUMBS #}
{% block breadcrumbs %}

    {% set listed_type=department.plural_class_name %}
    {% set page_title=department.name %}
    {% include 'breadcrumbs_detail.jinja2' %}

{% endblock breadcrumbs %}

{# SIDEBAR #}
{% block sidebar %}

    {% include 'sidebar.jinja2' %}

{% endblock sidebar %}

{# PRE-HEADER #}
{% block pre_header %}

    {% include 'task/list_tasks_preheader.jinja2' %}

{% endblock pre_header %}

{# PAGE-CONTENT #}
{% block page_content %}
    {% set users=department.users %}
    <div class="row-fluid">
        <div class="media">
            <a class="pull-left" href="#" style="width: 132px; height: 132px">
                <img style='width:auto; height: auto;' class="img-thumbnail"
                     src="{%- if department.thumbnail -%}
                    /{{ department.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}
                {%- endif -%}">
            </a>

            <div class="media-body">
                <h2 class="media-heading">{{ department.name }}
                    <small> {{ department.description }}</small>
                </h2>
                <a href="/departments/{{ department.id }}/update/dialog" class="btn btn-small btn-primary">
                    <i class="icon-edit"></i>

                    Edit Department
                    <i class="icon-on-right icon-arrow-right"></i>
                </a>

            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#department_tasks" data-toggle="tab">
                            <i class="icon-tasks"></i> Tasks
                        </a>
                    </li>
                    <li class="">
                        <a href="#department_users" data-toggle="tab">
                            <i class="icon-user"></i> Users
                        </a>
                    </li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="department_tasks">
                        {% include 'task/list_tasks.jinja2' %}
                    </div>
                    <div class="tab-pane fade" id="department_users">
                        {% include 'auth/list/list_users.jinja2' %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock page_content %}