<script class="dialog_loaded"></script>

<div class="row-fluid">

    <form id='group_create_form'
          class='form-horizontal'
          role='form'
          method='post'>

        {#Name #}
        <div class="control-group">
            <label class="span2 control-label"
                   for="group_name">Name</label>

            <div class="span6">
                <input id="group_name"
                       name='name'
                       type="text"
                       class="form-control"
                       placeholder="Name"
                       required>
            </div>
        </div>

        {#Description #}
        <div class='control-group'>
            <label class='span2 control-label'
                   for='group_description'>Description</label>

            <div class='span6'>
                <textarea id="group_description"
                          name='description'
                          class="autosize-transition span12"
                          style="overflow: hidden;
                                     word-wrap: break-word;
                                     resize: horizontal;
                                     height: 50px;"
                        ></textarea>
            </div>
        </div>

        <div class="space-10"></div>
        {#Permissions #}
        {% set mode='Create' %}
        {% set address=request.route_url('get_group_permissions', id=-1) %}
        {% include 'group/list/list_group_permissions.jinja2' %}


    </form>

</div>


<script type="text/javascript">
    var permissions_loaded = function () {};

    function init_dialog() {
        console.debug('starting to initialize group dialog!!!');

        var dialog_template_label = window.jQuery('#dialog_template_label');
        dialog_template_label.find('span').remove();
        dialog_template_label.append('<span>New Group</span>')

        window.jQuery('#dialog_template_body').attr('style', "height: 600px");

        {# Submit Button #}
        var submit_button = window.jQuery('#dialog_template_submit_button');
        submit_button.on('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            // disable the submit_button

            submit_button.button('loading');


            var group_create_form = window.jQuery('#group_create_form');

            window.jQuery.post("{{ request.route_url('create_group') }}",
                   group_create_form.serialize()
            ).done(function () {
                window.location.assign('{{ came_from }}');
            }).fail(function (jqXHR) {

                bootbox.alert(jqXHR.responseText);
                submit_button.button('reset');

            });
        });


        console.debug('finished initializing the user dialog!')
    }
</script>

<script type="text/javascript">

    function destruct_dialog() {

        window.jQuery('.ace-checkbox-2').attr('disabled', true);
        window.jQuery('#group_create_form').unbind();
        window.jQuery('#group_name').unbind();
        window.jQuery('#group_description').unbind();
        window.jQuery('#dialog_template_submit_button').unbind();
        window.jQuery('#dialog_template').data('modal', null);

    }
</script>

