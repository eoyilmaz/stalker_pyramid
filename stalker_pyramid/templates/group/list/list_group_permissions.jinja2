<div class='dataTables_wrapper'>
    <div class="span7">
        <!-- Table -->
    <div class="table-header header-color-red">
            Permissions
        </div>
        <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
            <tr>
                <th>Action Name</th>
                <th>Create</th>
                <th>Read</th>
                <th>Update</th>
                <th>Delete</th>
                <th>List</th>
            </tr>
            </thead>
            <tbody>
            {% for entity_type in entity_types %}
                <tr>
                    <td>{{ entity_type.name }}</td>
                    <td>

                        {% for permission in entity.permissions %}
                            {% if permission.action == 'Create' and  permission.class_name == entity_type.name %}
                                <label>
                                    <input name="form-field-checkbox" type="checkbox" checked="true"
                                           class="ace ace-checkbox-2">
                                    <span class="lbl"></span>
                                </label>
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>

                        {% for permission in entity.permissions %}
                            {% if permission.action == 'Read' and  permission.class_name == entity_type.name %}
                               <label>
                                    <input name="form-field-checkbox" type="checkbox" checked="true"
                                           class="ace ace-checkbox-2">
                                    <span class="lbl"></span>
                                </label>

                            {% endif %}
                        {% endfor %}

                    </td>
                    <td>

                        {% for permission in entity.permissions %}
                            {% if permission.action == 'Update' and  permission.class_name == entity_type.name %}
                                <label>
                                    <input name="form-field-checkbox" type="checkbox" checked="true"
                                           class="ace ace-checkbox-2">
                                    <span class="lbl"></span>
                                </label>

                            {% endif %}
                        {% endfor %}

                    </td>
                    <td>


                        {% for permission in entity.permissions %}
                            {% if permission.action == 'Delete' and  permission.class_name == entity_type.name %}
                                <label>
                                    <input name="form-field-checkbox" type="checkbox" checked="true"
                                           class="ace ace-checkbox-2">
                                    <span class="lbl"></span>
                                </label>

                            {% endif %}
                        {% endfor %}

                    </td>
                    <td>

                        {% for permission in entity.permissions %}
                            {% if permission.action == 'List' and  permission.class_name == entity_type.name %}
                                <label>
                                    <input name="form-field-checkbox" type="checkbox" checked="true"
                                           class="ace ace-checkbox-2">
                                    <span class="lbl"></span>
                                </label>

                            {% endif %}
                        {% endfor %}

                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
</div>