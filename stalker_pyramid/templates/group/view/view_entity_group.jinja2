{% extends "base.jinja2" %}

{# BREADCRUMBS #}
{% block breadcrumbs %}
    {% set listed_type=group.plural_class_name %}
    {% set page_title=group.name %}
    {% include 'breadcrumbs_detail.jinja2' %}
{% endblock breadcrumbs %}

{# MODALS #}
{% block modals %}

    <div id='group_dialog'
         aria-labelledby="group_dialog_label"
         class='modal hide fade'
         tabIndex='-1'
         role='dialog'
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="project_dialog_label">Group Dialog</h3>
        </div>
        <div class="modal-body"></div>
        <div class="modal-footer">
            <button type="button" class="btn btn-small" data-dismiss="modal">
                <i class="icon-remove"></i>
                Cancel
            </button>
            <button id='group_dialog_submit_button'
                    type="button" class="btn btn-small btn-primary">
                <i class="icon-ok"></i>
                Ok
            </button>
        </div>
    </div>

{% endblock modals%}

{# SIDEBAR #}
{% block sidebar %}
    {% include 'sidebar.jinja2' %}
{% endblock sidebar %}

{# PAGE-CONTENT #}
{% block page_content %}
    {% set users=group.users %}
    <div class="row-fluid">
        <div class="media">
            <a class="pull-left" href="#" style="width: 132px; height: 132px">
                <img style='width:auto; height: auto;' class="img-thumbnail"
                     src="{%- if group.thumbnail -%}
                    /{{ group.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_Team.jpg") }}
                {%- endif -%}">
            </a>

            <div class="media-body">
                <h2 class="media-heading">{{ group.name }}
                    <small> {{ group.description }}</small>
                </h2>


              <a data-target="#group_dialog"
                                   data-toggle="modal"
                                   data-keyboard=false
                                   href="/groups/{{ group.id }}/update/dialog" class="btn btn-small btn-primary">
                    <i class="icon-edit"></i>

                    Edit Group
                    <i class="icon-on-right icon-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#group_permissions"
                           data-toggle="tab"><i class="icon-key"></i> Permissions</a>
                    </li>
                    <li class="">
                        <a href="#group_users" data-toggle="tab">
                          <i class="icon-user"></i> Users</a>
                    </li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="group_permissions">
                        {% include 'group/list/list_permissions.jinja2' %}
                    </div>
                    <div class="tab-pane fade" id="group_users">
                        {% include 'auth/list/list_users.jinja2' %}
                    </div>

                </div>
            </div>
        </div>
    </div>
    {#    </div>#}

{% endblock page_content %}
