    <form id='append_form'
              class='form-horizontal no-padding no-scroll'
              role='form'
              method='post'>
        <table id="multiple_select_list" class="table table-striped table-bordered table-hover no-margin-bottom no-border-top" >
            <thead>
                <tr>
