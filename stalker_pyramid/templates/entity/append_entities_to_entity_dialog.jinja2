            <span>{{=it.description}}</span>
        </td>
        <td>
            <input id="selected_{{=it.id}}"
                       name="selected_ids"
                       type="checkbox"
                       class="ace ace-checkbox-2">
                <span class="lbl"></span>
        </td>

   </tr>
</script>
