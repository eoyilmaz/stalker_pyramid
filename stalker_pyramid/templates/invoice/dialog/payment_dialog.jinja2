<div class="row-fluid">

    <form id='payment_form'
          class='form-horizontal'
          role='form'
          method="post"
            >
        <div class="row-fluid">

            {# Amount #}
            <div class="control-group">
                <label class="span3 control-label"
                       for="amount">Amount</label>
                <div class="span9">
                    <input id="amount"
                           class='input-block-level'
                           name='amount'
                           type="number"
                           placeholder="Amount"
                           required>
                </div>
            </div>
            {# Unit #}
            <div class="control-group">
                <label class="span3 control-label"
                       for="unit">Unit</label>
                <div class="span9">
                    <select id='unit'
                               class='input-block-level'
                               name='unit'>
                            <option value='TL'>TL</option>
                            <option value='$'>$</option>
                        </select>
                </div>
            </div>

            {#Description #}
            <div class="control-group'">
                <label for="budget_description"
                       class="span3 control-label">Description</label>
                <div class="span9">
                    <textarea id="budget_description"
                              name='description'
                              class="autosize-transition"
                              style="overflow: hidden;
                                     word-wrap: break-word;
                                     resize: horizontal;
                                     height: 50px;"
                            ></textarea>
                </div>
            </div>
        </div>
    </form>
</div>
