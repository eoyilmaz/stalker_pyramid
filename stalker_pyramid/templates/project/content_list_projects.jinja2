<div id='view_projects' style="width: 100%; height: 100%">
    <div style='width:100%; height: 100%; position: absolute;'>
        <div id='projects_data_grid' style="position: static; width: 100%; height: 100%;"></div>
    </div>
</div>

<script type='text/javascript'>
    require(['dijit/registry',
        'dojo/data/ObjectStore',
        "dgrid/List",
        "dgrid/Grid",
        "dgrid/Selection",
        "dgrid/Keyboard",
        "dojo/_base/declare",
        "dgrid/editor",
        'dojo/store/Memory',
        'dijit/form/FilteringSelect',
        'dojo/store/JsonRest',
        'dojo/domReady!'
    ], function (registry, ObjectStore, List, Grid, Selection, Keyboard,
                 declare, editor, Memory, FilteringSelect, JsonRest) {

        var StandardGrid = declare([Grid, Selection, Keyboard]);
        var projects_DataGrid = new StandardGrid({
            id: 'projects_data_grid',
            width: '100%',
            autoHeight: true
        }, 'projects_data_grid');


        function projects_DataGrid_updater() {

            var projects_memory = new JsonRest({
                target: '{{ request.route_url("get_entity_projects", id=entity.id) }}'
            });

            projects_memory.query().then(function (data) {


                var columns = [
                    {
                        label: "Thumbnail",
                        field: 'thumbnail',
                        sortable: false,
                        get: function (object) {
                            return object; // return entire item for formatter to use
                        },
                        formatter: function (value) {
                            var path = '{{ request.static_url("stalker_pyramid:static/stalker/images/T_NO_IMAGE.gif") }}';
                            if (value.thumbnail_path) {
                                path = value.thumbnail_path;
                            }
                            return '<img width= "100px"; src="' + path + '">';
                        }
                    },
                    {
                        field: 'name',
                        label: "Name",
                        get: function (object) {
                            return object; // return entire item for formatter to use
                        },
                        formatter: function (value) {

                            {% if has_permission('Read_Project') or  entity==logged_in_user%}

                                var targetPane = "'central_content'";
                                var address = "'projects/" + value.id + "/view'";

                                return '<a href="javascript:redirectLink(' + targetPane + ',' + address + ');">' + value.name + '</a>';

                            {% else %}

                                return  value.name;

                            {% endif %}
                        }
                    }
                ];

                projects_DataGrid.renderArray(data);
                projects_DataGrid.set('columns', columns);

            });

        }


        projects_DataGrid_updater();

    });

</script>

