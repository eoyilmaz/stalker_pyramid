<!DOCTYPE html>
<html>
<head>
    <title>Stalker Pyramid</title>
    <!-- Meta Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>


    <script src='{{ request.static_url("stalker_pyramid:static/doT/doT.min.js") }}'></script>

    {% block pre_header %}
    {% endblock pre_header %}


    <!-- CSS -->
    <link rel="stylesheet" href="/static/bootstrap-3.0.0/css/bootstrap.min.css">
    <link rel='stylesheet' href="/static/bootstrap-3.0.0/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/static/bootstrap-3.0.0/css/bootstrap.icon-large.min.css" >
    <link rel="stylesheet" href="/static/stalker/css/stalker_bootstrap.css">

    {% block extra_scripts %}
    {% endblock extra_scripts %}


    {% block header_extra %}
    {% endblock header_extra %}

</head>
<body>



{% block content %}

    {% block navbar %}
        {% include 'navbar.jinja2' %}
    {% endblock navbar %}

    <div class="container">
        {% block main_container %}

            <div class="row">
                {% block sidebar %}
                    <div class='col-lg-2'>
                    </div>
                {% endblock sidebar %}
            
                {% block main_content %}
                    <div class='col-lg-10'>
                    </div>
                {% endblock main_content %}
            </div>

        {% endblock main_container %}
    </div>

    {% block footer %}
        <footer>
            <div id="footer" class='footer'>
                <div class="container muted credit">
                    <div class="text-center" style='float: left;'>Stalker Pyramid v{{ stalker_pyramid.__version__ }} &copy; 2009-2013 Erkan Ozgur Yilmaz.</div>
                    <div class='text-right' style="float:right;"><a href='http://www.glyphicons.com/'>GLYPHICONS.com</a></div>
                </div>
            </div>
        </footer>
    {% endblock footer %}
{% endblock content %}

<!-- JavaScript -->
{% block scripts%}
    <script src="/static/jquery/jquery-2.0.3.js"></script>
    <script src='{{ request.static_url("stalker_pyramid:static/bootstrap-3.0.0/js/bootstrap.js") }}'></script>
    <script src='{{ request.static_url("stalker_pyramid:static/stalker/date.format.js") }}'></script>
{% endblock scripts%}



</body>
</html>
