<div class="row-fluid">
    <div class="span12">
        <table id="sample-table-1"
               class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Parent Name</th>
                <th>Task Name</th>
                <th>#</th>
                <th>Is Published</th>
                <th>Name</th>
                <th>Path</th>
                <th>Created By</th>
            </tr>
            </thead>

            <tbody>
            {% for version in versions %}
                <tr>
                    <td>{% for parent in version.task.parents %}
                        {{ parent.name }} |
                      {% endfor %}
                      </td>
                    <td>{{ version.task.name }}</td>
                    <td>{{ version.version_number }}</td>
                    <td>{{ version.is_published }}</td>
                    <td>{{ version.name }}</td>
                    <td>{{ version.path }}</td>
                    <td><a href="{{ request.route_url('view_user', id=version.created_by.id) }}">{{ version.created_by.name }}</a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    <!--/span-->
</div>
