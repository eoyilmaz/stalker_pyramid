<div class="span2">
    <div class="thumbnail">
        <img data-src="holder.js/300x200" alt="300x200"
             style='width:auto; height: auto; overflow: hidden;'
             class="thumbnail" src="{%- if asset.thumbnail -%}
                    /{{ asset.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_0.png") }}
                {%- endif -%}">

        <div class="caption">
            <h3>{{ asset.name }}</h3>

            <p>

            </p>
            <p><a href="{{ request.route_url('view_asset', id=asset.id) }}"
                  class="btn btn-primary">View</a> <a href="#" class="btn btn-default">Update</a>
            </p>
        </div>
    </div>
</div>